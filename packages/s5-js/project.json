{
  "name": "@lumeweb/s5-js",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/s5-js/src",
  "projectType": "library",
  "tags": [],

  "targets": {
    "build": {
      "command": "echo Building",
      "dependsOn": ["build-base"]
    },
    "build-base": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/s5-js",
        "main": "packages/s5-js/src/index.ts",
        "tsConfig": "packages/s5-js/tsconfig.lib.json",
        "assets": [
          "packages/libs5/*.md"
        ]
      },
      "dependsOn": ["orval"]
    },
    "orval": {
      "command": "orval; orval",
      "options": {
        "cwd": "packages/s5-js"
      }
    }
  }
}
